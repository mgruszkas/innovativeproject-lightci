<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
  <title>AgrippaCI Authentication</title>
  <link rel="stylesheet" href="app/app.css"> <!-- load bootstrap css -->
  <link rel="stylesheet" href="app/bower_components/font-awesome/css/font-awesome.css"> <!-- load fontawesome -->
  <link rel="icon"
        type="image/png"
        href="assets/images/favico.png">

</head>
<body style="margin:0;">
<div class="container">

  <div class="col-sm-6 col-sm-offset-3">
    <div class="col-sm-12 col-sm-offset-1"><img src="assets/images/logo.png"></div>

    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form id="registerForm" action="/api/users" method="post">
      <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" required>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" required pattern="((?=.*\d).{6,20})">
      </div>




    <hr>
    <button style="float:right;" type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>
    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Yep, I've forgot it... <a href="/remind">Remind</a></p>

  </div>

</div>
</body>
</html>

